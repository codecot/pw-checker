{
  "name": "@codecot/pw-checker",
  "version": "1.1.0",
  "description": "A comprehensive CLI tool to audit passwords locally using HIBP and import from Chrome/Bitwarden",
  "keywords": [
    "password",
    "security",
    "audit",
    "hibp",
    "breach",
    "chrome",
    "bitwarden",
    "cli",
    "cybersecurity"
  ],
  "license": "MIT",
  "author": "Volodymyr Pasichnyk <volodymyr.pasichnyk@gmail.com>",
  "homepage": "https://github.com/codecot/pw-checker",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codecot/pw-checker.git"
  },
  "bugs": {
    "url": "https://github.com/codecot/pw-checker/issues"
  },
  "type": "module",
  "main": "dist/index.js",
  "bin": "./bin/pw-checker.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "bin/",
    "dist/",
    "scripts/",
    "data/*.template",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev:build": "tsc",
    "dev:cli": "node bin/pw-checker.js",
    "dev:run": "NODE_OPTIONS=\"--import tsx\" node src/index.ts",
    "dev:health": "NODE_OPTIONS=\"--import tsx\" node src/healthCheck.ts",
    "dev:help": "NODE_OPTIONS=\"--import tsx\" node src/index.ts --help",
    "dev:start": "NODE_OPTIONS=\"--import tsx\" node src/index.ts",
    "dev:test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "node -e \"try { require('fs').mkdirSync('db', { recursive: true }); require('fs').mkdirSync('reports', { recursive: true }); } catch (e) {}\"",
    "prebuild": "rm -rf dist",
    "prepublishOnly": "npm run dev:build",
    "analysis:breaches": "NODE_OPTIONS=\"--import tsx\" node src/breachAnalysis.ts",
    "breaches:check": "NODE_OPTIONS=\"--import tsx\" node src/index.ts --check-breaches",
    "breaches:resume": "NODE_OPTIONS=\"--import tsx\" node src/index.ts --check-breaches --resume",
    "breaches:scheduled": "NODE_OPTIONS=\"--import tsx\" node src/index.ts --breach-scheduled",
    "breaches:stats": "NODE_OPTIONS=\"--import tsx\" node src/index.ts --breach-stats",
    "db:clear": "NODE_OPTIONS=\"--import tsx\" node src/clearDb.ts",
    "db:migrate-domains": "NODE_OPTIONS=\"--import tsx\" node src/migrateDomains.ts",
    "db:update-schema": "NODE_OPTIONS=\"--import tsx\" node src/updateDbSchema.ts",
    "export:csv": "NODE_OPTIONS=\"--import tsx\" node src/exportToCsv.ts",
    "export:csv:help": "NODE_OPTIONS=\"--import tsx\" node src/exportToCsv.ts --help",
    "format:apply": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "import:bitwarden": "NODE_OPTIONS=\"--import tsx\" node src/importFromBitwarden.ts",
    "import:bitwarden:help": "NODE_OPTIONS=\"--import tsx\" node src/importFromBitwarden.ts --help",
    "import:chrome": "NODE_OPTIONS=\"--import tsx\" node src/index.ts --chrome",
    "import:chrome-csv": "NODE_OPTIONS=\"--import tsx\" node src/index.ts --chrome-csv",
    "risk:all": "NODE_OPTIONS=\"--import tsx\" node src/riskAnalysis.ts --all",
    "risk:calculate": "NODE_OPTIONS=\"--import tsx\" node src/riskAnalysis.ts --calculate-risk",
    "risk:report": "NODE_OPTIONS=\"--import tsx\" node src/riskAnalysis.ts --generate-pdf",
    "risk:show": "NODE_OPTIONS=\"--import tsx\" node src/riskAnalysis.ts --show-risks",
    "security:setup": "bash scripts/setup-security.sh",
    "version:patch": "npm version patch --no-git-tag-version",
    "version:minor": "npm version minor --no-git-tag-version",
    "version:major": "npm version major --no-git-tag-version",
    "version:publish": "bash scripts/publish-npm.sh",
    "view:all": "NODE_OPTIONS=\"--import tsx\" node src/queryDb.ts",
    "view:breached": "NODE_OPTIONS=\"--import tsx\" node src/queryDb.ts --breached",
    "view:breached-detailed": "NODE_OPTIONS=\"--import tsx\" node src/queryDb.ts --breached-detailed",
    "view:chrome": "NODE_OPTIONS=\"--import tsx\" node src/queryDb.ts --chrome",
    "view:chrome-compromised": "NODE_OPTIONS=\"--import tsx\" node src/queryDb.ts --chrome-compromised",
    "view:chrome-only-compromised": "NODE_OPTIONS=\"--import tsx\" node src/queryDb.ts --chrome-only-compromised",
    "view:compromised": "NODE_OPTIONS=\"--import tsx\" node src/queryDb.ts --compromised",
    "view:critical-risk": "NODE_OPTIONS=\"--import tsx\" node src/queryDb.ts --critical-risk",
    "view:high-risk": "NODE_OPTIONS=\"--import tsx\" node src/queryDb.ts --high-risk",
    "view:safe": "NODE_OPTIONS=\"--import tsx\" node src/queryDb.ts --safe",
    "view:site": "NODE_OPTIONS=\"--import tsx\" node src/querySite.ts",
    "view:site:help": "NODE_OPTIONS=\"--import tsx\" node src/querySite.ts --help",
    "view:unchecked": "NODE_OPTIONS=\"--import tsx\" node src/queryDb.ts --unchecked"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.5.0",
    "jspdf": "^3.0.1",
    "node-fetch": "^3.3.2",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  }
}